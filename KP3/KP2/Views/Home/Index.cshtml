@model IEnumerable<KP2.Models.Trip>

@{
    ViewBag.Title = "Index";
}

<h2>Главная</h2>
<div/>
<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            План рейса
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plan)
            </td>
        </tr>
    }
</table>
